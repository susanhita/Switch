<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back12"
    android:clipToPadding="true"
    android:layout_gravity="center_horizontal"
    android:columnCount="2"
    android:padding="15dp">


    <Button
        android:id="@+id/light1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_margin="20dp"
        android:layout_row="0"
        android:background="@drawable/button_back1"
        android:drawablePadding="-20dp"
        android:drawableTop="@drawable/bulboff"
        android:onClick="LightonClick"
        android:paddingTop="30dp"
        android:text="light"
        android:textColor="@color/off"
        android:textStyle="bold" />
       <!-- android:background="@drawable/buttonshape" -->



    <Button
        android:id="@+id/ac"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/light1"
        android:layout_column="1"
        android:layout_margin="20dp"
        android:layout_row="0"
        android:background="@drawable/button_back1"
        android:drawablePadding="-20dp"
        android:drawableTop="@drawable/acoff"
        android:onClick="AConClick"
        android:paddingTop="30dp"
        android:text="AC"
        android:textColor="@color/off"
        android:textStyle="bold" />

    <Button
        android:id="@+id/lock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button13"
        android:layout_column="0"
        android:layout_margin="20dp"
        android:layout_row="1"
        android:background="@drawable/button_back1"
        android:drawablePadding="-20dp"
        android:drawableTop="@drawable/lock_open"
        android:onClick="LockonClick"
        android:paddingTop="30dp"
        android:text="lock"
        android:textColor="@color/black_overlay"
        android:textStyle="bold" />


    <Button
        android:id="@+id/fan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button13"
        android:layout_column="1"
        android:layout_margin="20dp"
        android:layout_row="1"
        android:background="@drawable/button_back1"
        android:drawablePadding="-20dp"
        android:drawableTop="@drawable/fanoff"
        android:onClick="FanonClick"
        android:paddingTop="30dp"
        android:text="fan"
        android:textColor="@color/black_overlay"
        android:textStyle="bold" />


</GridLayout>